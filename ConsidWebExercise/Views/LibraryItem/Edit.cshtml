@model CreateLibraryItemViewModel 
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="LibraryItem.Id" />
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Library Item</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LibraryItem.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="LibraryItem.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "CategoryName"))">
                        </select>
                        <span asp-validation-for="LibraryItem.CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LibraryItem.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LibraryItem.Title" class="form-control" />
                        <span asp-validation-for="LibraryItem.Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LibraryItem.Author"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LibraryItem.Author" class="form-control" />
                        <span asp-validation-for="LibraryItem.Author" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LibraryItem.Pages"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LibraryItem.Pages" class="form-control" />
                        <span asp-validation-for="LibraryItem.Pages" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LibraryItem.RunTimeMinutes"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LibraryItem.RunTimeMinutes" class="form-control" />
                        <span asp-validation-for="LibraryItem.RunTimeMinutes" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LibraryItem.Type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LibraryItem.Type" class="form-control" />
                        <span asp-validation-for="LibraryItem.Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>