@model CreateEmployeeViewModel
@{
    ViewData["Title"] = "Add new employee";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add new employee</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.employeeToAdd.FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.employeeToAdd.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.employeeToAdd.FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.employeeToAdd.LastName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.employeeToAdd.LastName" class="form-control" />
                        <span asp-validation-for="@Model.employeeToAdd.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="rank"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="rank" class="form-control" />
                        <span asp-validation-for="rank" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.employeeToAdd.IsCEO"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.employeeToAdd.IsCEO" class="form-control" />
                        <span asp-validation-for="@Model.employeeToAdd.IsCEO" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.employeeToAdd.IsManager"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.employeeToAdd.IsManager" class="form-control" />
                        <span asp-validation-for="@Model.employeeToAdd.IsManager" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.employeeToAdd.ManagerId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.employeeToAdd.ManagerId" asp-items="@(new SelectList(Model.managers,"Id","FirstName"))" class="custom-select">
                            <option value="">No Manager</option>
                        </select>
                        <span asp-validation-for="@Model.employeeToAdd.ManagerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>